<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    tools:context="cz.muni.fi.a2p06.stolencardatabase.fragments.CarDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/car_detail_photo"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/car_thumbnail"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:stretchColumns="*">
            <TableRow>
                <TextView
                    android:id="@+id/car_detail_manufacturer_and_model"
                    android:textSize="20sp"
                    android:padding="3dp"
                    android:layout_span="2"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="@string/spz_text"
                    android:padding="3dp"/>
                <TextView
                    android:id="@+id/car_detail_spz"
                    android:padding="3dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="@string/stolen_date"
                    android:padding="3dp"/>
                <TextView
                    android:id="@+id/car_detail_stolen_date"
                    android:padding="3dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="@string/color"
                    android:padding="3dp"/>
                <TextView
                    android:id="@+id/car_detail_color"
                    android:padding="3dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="@string/vin_text"
                    android:padding="3dp"/>
                <TextView
                    android:id="@+id/car_detail_vin"
                    android:padding="3dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="@string/production_year"
                    android:padding="3dp"/>
                <TextView
                    android:id="@+id/car_detail_production_year"
                    android:padding="3dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="@string/engine"
                    android:padding="3dp"/>
                <TextView
                    android:id="@+id/car_detail_engine"
                    android:padding="3dp"/>
            </TableRow>
        </TableLayout>

        <com.google.android.gms.maps.MapView
            android:id="@+id/car_map_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            map:cameraZoom="17"
            map:mapType="normal"
            map:liteMode="true"
            map:uiMapToolbar="false"/>
    </LinearLayout>

</ScrollView>
