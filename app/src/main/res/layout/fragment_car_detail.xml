<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:id="@+id/car_detail_scroll_view"

    tools:context="cz.muni.fi.a2p06.stolencardatabase.fragments.CarDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/car_detail_photo"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/car_thumbnail"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_car"
                    android:text="@string/edit_car"
                    android:visibility="gone"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/delete_car"
                    android:text="@string/delete_car"
                    android:visibility="gone"
                    android:backgroundTint="@color/red"
                    android:textColor="@color/white"
                    />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/report_location"
            android:text="@string/report_location" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:stretchColumns="*">
            <TableRow>
                <TextView
                    android:id="@+id/car_detail_manufacturer_and_model"
                    android:textSize="20sp"
                    android:padding="3dp"
                    android:layout_span="2"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="@string/regno_text"
                    android:padding="3dp"/>
                <TextView
                    android:id="@+id/car_detail_regno"
                    android:padding="3dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="@string/stolen_date"
                    android:padding="3dp"/>
                <TextView
                    android:id="@+id/car_detail_stolen_date"
                    android:padding="3dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="@string/color"
                    android:padding="3dp"/>
                <TextView
                    android:id="@+id/car_detail_color"
                    android:padding="3dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="@string/vin_text"
                    android:padding="3dp"/>
                <TextView
                    android:id="@+id/car_detail_vin"
                    android:padding="3dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/car_detail_production_year_text"
                    android:text="@string/production_year"
                    android:padding="3dp"/>
                <TextView
                    android:id="@+id/car_detail_production_year"
                    android:padding="3dp"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:id="@+id/car_detail_engine_text"
                    android:text="@string/engine"
                    android:padding="3dp"/>
                <TextView
                    android:id="@+id/car_detail_engine"
                    android:padding="3dp"/>
            </TableRow>
        </TableLayout>

        <cz.muni.fi.a2p06.stolencardatabase.views.CustomMapView
            android:id="@+id/car_map_view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            map:cameraZoom="17"
            map:mapType="normal"
            map:uiMapToolbar="false"/>
    </LinearLayout>

</ScrollView>
